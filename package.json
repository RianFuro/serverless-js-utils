{
  "name": "serverless-js-utils",
  "version": "0.3.1",
  "description": "Utility functions for a composable serverless framework configuration",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lambda": {
      "import": "./dist/lambda.js",
      "require": "./dist/lambda.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest"
  },
  "keywords": [
    "serverless-framework",
    "serverless",
    "framework"
  ],
  "author": "Florian Proksch <florian.proksch@protonmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4",
    "tsup": "^6.5.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/lambda.ts"
    ],
    "dts": {
      "compilerOptions": {
        "moduleResolution": "NodeNext"
      }
    },
    "format": [
      "esm",
      "cjs"
    ]
  }
}
